datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum Role {
    ADMIN
    USER
}

model User {
    user_id    String   @id @default(uuid())
    email      String   @unique
    password   String
    first_name String
    last_name  String
    role       Role     @default(USER)
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}
